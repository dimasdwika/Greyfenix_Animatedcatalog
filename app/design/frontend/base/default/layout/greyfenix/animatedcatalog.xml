<?xml version="1.0"?>
<layout version="0.1.0">
    <default>
        <reference name="head">
            <action method="addItem">
                <type>skin_js</type>
                <name>greyfenix/js/animatedcatalog.js</name>
            </action>
        </reference>
    </default>
    <catalog_category_default>
        <reference name="product_list">
            <action method="setTemplate">
                <template>greyfenix/animatedcatalog/product/list.phtml</template>
            </action>
        </reference>
    </catalog_category_default>
    <catalog_category_layered>
        <reference name="product_list">
            <action method="setTemplate">
                <template>greyfenix/animatedcatalog/product/list.phtml</template>
            </action>
        </reference>
    </catalog_category_layered>
    <catalogsearch_result_index>
        <reference name="search_result_list">
            <action method="setTemplate">
                <template>greyfenix/animatedcatalog/product/list.phtml</template>
            </action>
        </reference>
    </catalogsearch_result_index>
    <catalogsearch_advanced_result>
        <reference name="search_result_list">
            <action method="setTemplate">
                <template>greyfenix/animatedcatalog/product/list.phtml</template>
            </action>
        </reference>
    </catalogsearch_advanced_result>
</layout>
